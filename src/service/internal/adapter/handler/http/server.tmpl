package http

import (
	"github.com/gofiber/fiber/v2"
)

type Server struct {
	port string
	{{.HTTPInfo.Name}}Handler  *{{.HTTPInfo.Name|Upper}}Handler
	// +salvation ServerType
}

func NewServer(
	port string,
	{{.HTTPInfo.Name}}Handler *{{.HTTPInfo.Name|Upper}}Handler,
	// +salvation NewServerType
) Server {
	return Server{
		port: port,
		{{.HTTPInfo.Name}}Handler: {{.HTTPInfo.Name}}Handler,
		// +salvation ServerHandler
	}
}

func (s *Server) Run() {
	app := fiber.New()
	routes := newRouter(
	    s.{{.HTTPInfo.Name}}Handler,
	    // +salvation RouterRun
	)
	routes.serve(app)
	_ = app.Listen(":" + s.port)
}
